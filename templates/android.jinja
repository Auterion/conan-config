[settings]
os = {{ os }}
arch = {{ architecture.conan_name }}
compiler = {{ compiler.name }}
compiler.version = {{ compiler.version }}
build_type = {{ build_type }}

compiler.libcxx = c++_static
os.api_level = 29

[tool_requires]
*: android-ndk/r25

[conf]
{% if build_type == 'Release' %}
tools.build:cxxflags = ['-g']
tools.build:cflags = ['-g']
{% endif %}
